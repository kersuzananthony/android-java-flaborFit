<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kersuzan.flaborfit.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/weightButton"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#2ca5f5"
        android:layout_weight="1"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/weight"
            android:contentDescription="@string/weight_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textSize="40dp"
            android:textColor="#FFF"
            android:text="30%"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Weight Lifting"
            android:id="@+id/textView2"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/textView"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="25dp"
            android:textColor="#FFF"
            android:layout_marginStart="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Do you even lift?!"
            android:id="@+id/textView3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:textSize="15dp"
            android:textColor="#FFF"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="10 sets"
            android:id="@+id/textView10"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView2"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:textColor="#FFF"
            android:padding="3dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#20000000" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/yogaButton"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#916bcd"
        android:layout_weight="1" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/lotus"
            android:contentDescription="@string/lotus_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textSize="40dp"
            android:textColor="#FFF"
            android:text="22%"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Yoga"
            android:id="@+id/textView2"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/textView"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="25dp"
            android:textColor="#FFF"
            android:layout_marginStart="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Nomaste"
            android:id="@+id/textView3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:textSize="15dp"
            android:textColor="#FFF"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="1 hour"
            android:id="@+id/textView10"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView2"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:textColor="#FFF"
            android:padding="3dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#20000000" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardioButton"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#52ad56"
        android:layout_weight="1"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/heart"
            android:contentDescription="@string/heart_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textSize="40dp"
            android:textColor="#FFF"
            android:text="15%"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Cardio"
            android:id="@+id/textView2"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/textView"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="25dp"
            android:textColor="#FFF"
            android:layout_marginStart="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Run like crazy"
            android:id="@+id/textView3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:textSize="15dp"
            android:textColor="#FFF"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="5 miles"
            android:id="@+id/textView10"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView2"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:textColor="#FFF"
            android:padding="3dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#20000000" />

    </RelativeLayout>
</LinearLayout>
